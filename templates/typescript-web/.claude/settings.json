{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Bash(pnpm:*)",
      "Bash(npm run:*)",
      "Bash(npx:*)",
      "Bash(tsc:*)",
      "Bash(node:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write(*.ts)|Write(*.tsx)|Write(*.js)|Write(*.jsx)",
        "hooks": [
          {
            "type": "command",
            "command": "prettier --write $CLAUDE_FILE_PATH 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
